Q145: Return a structure containing top student's details from a function.

/*
Sample Test Cases:
Input 1:
3 students: Riya 101 89, Karan 102 96, Meena 103 92
Output 1:
Top Student: Karan | Roll: 102 | Marks: 96

*/


#include <stdio.h>

struct Student
{
    char name[20];
    int roll_no;
    int marks;
};

// Function to find and return topper structure
struct Student getTopper(struct Student s[], int n)
{
    int i, topIndex = 0;

    for(i = 1; i < n; i++)
    {
        if(s[i].marks > s[topIndex].marks)
        {
            topIndex = i;
        }
    }

    return s[topIndex];   // return structure
}

int main()
{
    struct Student st[10], topper;
    int n, i;

    printf("Enter number of students: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++)
    {
        printf("Enter Name of Student %d: ", i+1);
        scanf("%s", st[i].name);

        printf("Enter Roll Number: ");
        scanf("%d", &st[i].roll_no);

        printf("Enter Marks: ");
        scanf("%d", &st[i].marks);

        printf("\n");
    }

    topper = getTopper(st, n);

    printf("Top Student: %s | Roll: %d | Marks: %d\n", topper.name, topper.roll_no, topper.marks);

    return 0;
}
